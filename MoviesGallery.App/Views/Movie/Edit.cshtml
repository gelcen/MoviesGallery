@model MovieViewModel

<div class="container">
    @if (Model.Id == 0)
    {
        <h1>Создание</h1>
    }
    else
    {
        <h1>Редактирование</h1>
    }
    <form asp-controller="Movie" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Username" type="hidden"/>
        <div class="form-group">
            <label for="title">Название</label>
            <input class="form-control" id="title" asp-for="Title">
            <span asp-validation-for="Title" style="color: red"></span>
        </div>
        <div class="form-group">
            <label for="director">Режиссер</label>
            <input class="form-control" id="director" asp-for="Director">
            <span asp-validation-for="Director" style="color: red"></span>
        </div>
        <div class="form-group">
            <label for="releaseYear">Год выпуска</label>
            <input class="form-control" id="releaseYear" asp-for="ReleaseYear">
            <span asp-validation-for="ReleaseYear" style="color: red"></span>
        </div>
        <div class="form-group">
            <label for="description">Описание</label>
            <textarea class="form-control" id="description" rows="3" asp-for="Description"></textarea>
            <span asp-validation-for="Description" style="color: red"></span>
        </div>
        <div class="form-group">
            <label for="posterImage">Постер</label>
            <input asp-for="CurrentImage" type="hidden" />
            <input type="file" class="form-control-file" id="posterImage" asp-for="Image">
            <span asp-validation-for="Image" style="color: red"></span>
        </div>
        @if (Model.Id == 0)
        {
            <button type="submit" class="btn btn-primary">Создать</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary">Сохранить</button>
        }
    </form>
</div>